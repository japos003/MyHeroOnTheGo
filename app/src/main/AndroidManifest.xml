<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myhero.myheroonthego" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartUp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayStories"
            android:label="@string/title_activity_display_stories" >
        </activity>
        <activity
            android:name=".Stories"
            android:label="@string/title_activity_stories" >
            <intent-filter>
                <action android:name="android.intent.action.StoriesHeroes" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Art"
            android:label="@string/title_activity_art" >
        </activity>
        <activity
            android:name=".StoriesHeroes"
            android:label="@string/title_activity_stories_heroes" >
        </activity>
        <activity
            android:name=".SubmitStory"
            android:label="@string/title_activity_submit_story" >
        </activity>
    </application>

</manifest>
